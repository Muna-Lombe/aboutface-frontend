/* pages/routine_index/routine_index.wxss */

.profile-background {
  width: 100%;
  height: 300rpx;  
  background-color: #EDDD98;
  position: relative;
}

.swish {
  width: 108%;
  height: 300rpx;
}

.profile-img {
  position: absolute;
  left: 278rpx; 
  top: 198rpx;
  height: 199rpx;
  width: 199rpx;
  border-radius: 50%;
  background-size: cover;
  border: 1px solid rgb(236, 236, 236);
}

.dashed-border {
  position: absolute; 
  left: 270rpx; 
  top: 191rpx;
  width: 210rpx;
  height: 210rpx;
  border-radius: 50%;
  border: 4rpx dashed #444;
  opacity: .3;
}

.user-name {
  color: #444444;
  font-size: 35rpx;
  display: flex;
  justify-content: center;
  margin-top: 120rpx;
}

.routine-container {
  margin-top: 50rpx;
}

/* modal */

.modal-dialog {
  width: 540rpx;
  height: 200rpx;
  overflow: hidden;
  z-index: 5;
  background: #f9f9f9;
  margin: 100rpx 0rpx 0rpx 100rpx;
  padding: 30rpx;
  position: absolute;
  margin-left: auto;
  margin-right: auto;
  top: 50vh;
  left: 0;
  right: 0;
  vertical-align: middle;
  border-radius: 20rpx;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  background: #000;
  opacity: 0.3;
  overflow: hidden;
  z-index: 1;
  color: #fff;
}

.modal-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.d-flex {
  display: flex;
  width: 100%;
  height: 100%;
  position: relative;
}

.confirm-cancel {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
}

.routine-name {
  margin-left: 10rpx;
  height: 60rpx;
  width: 100%;
}

.routine-put {
  margin-top:10rpx;
  border: 1px solid #e0e0e0;
  background-color: rgb(236, 236, 236);
  border-radius: 10rpx;
}
