/* pages/routine_show/routine_show.wxss */

.navbar {
  background-color: #f6f6f6;
}

.flex-nav {
  display: flex;
}

.arrow {
  width: 50rpx;
  height: 50rpx;
  margin: 10rpx;
  position: absolute;
  top: 95rpx;
  left: 30rpx;
}

/* header */

.routine-name {
  width: 100%;
  display: flex;
  justify-content: center;
  font-size: 70rpx;
  color: #444444;
  font-weight: bold;
}

.center {
  display: flex;
  justify-content: center;
}

.edit-delete {
  padding: 50rpx 0rpx;
  display: flex;
  justify-content: space-between;
  width: 80%;
  border-bottom: 1px solid #EDDD98;
}

.edit {
  height: 40rpx;
  display: flex;
  align-items: center;
}

.delete {
  height: 40rpx;
  display: flex;
  align-items: center;
}

.edit-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 7rpx;
}

.delete-icon {
  width: 37rpx;
  height: 40rpx;
  margin-right: 7rpx;
}

/* products */

.product-container {
  padding: 40rpx 20rpx;
  margin-bottom: 175rpx;
  display: flex;
  flex-direction: column;

  align-items: center;
}

/* add icon */

.add-product {
  position: fixed;
  bottom: 60rpx;
  right: 40rpx;
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
  background-color: #444444;
  display: flex;
  justify-content: center;
  align-items: center;
}

.add-icon {
  width: 55rpx;
  height: 55rpx;
}

/* modal */

.modal-dialog {
  width: 540rpx;
  height: 200rpx;
  position: absolute;
  overflow: hidden;
  z-index: 5;
  background: #f9f9f9;
  margin: 100rpx 0rpx 0rpx 100rpx;
  padding: 30rpx;
  position: absolute;
  margin-left: auto;
  margin-right: auto;
  top: 30%;
  left: 0;
  right: 0;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  background: #000;
  opacity: 0.3;
  overflow: hidden;
  z-index: 1;
  color: #fff;
}

.modal-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.d-flex {
  display: flex;
  width: 100%;
  height: 100%;
  position: relative;
}

.confirm-cancel {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
}

.search {
  margin-left: 10rpx;
  height: 60rpx;
  width: 100%;
}

.search_arr {
  margin-top:10rpx;
  border: 1px solid #e0e0e0;
  background-color: rgb(236, 236, 236);
  border-radius: 10rpx;
}

