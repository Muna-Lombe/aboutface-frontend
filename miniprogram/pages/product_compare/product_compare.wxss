/* pages/product_compare/product_compare.wxss */

.compare-container {
  margin: 25rpx;
}

.top-text {
  width: 100%;
  text-align: center;
}

.compare-box-container {
  margin-top: 30rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* modal */

.modal-dialog {
  width: 540rpx;
  height: 400rpx;
  overflow: hidden;
  z-index: 5;
  background: #f9f9f9;
  margin: 100rpx 0rpx 0rpx 100rpx;
  padding: 30rpx;
  position: absolute;
  margin-left: auto;
  margin-right: auto;
  top: 30vh;
  left: 0;
  right: 0;
  vertical-align: middle;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  background: #000;
  opacity: 0.3;
  overflow: hidden;
  z-index: 1;
  color: #fff;
}

.modal-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.d-flex {
  display: flex;
  width: 100%;
  height: 100%;
  position: relative;
}

.confirm-cancel {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
}

/* search bar */

.search{
  width: 83%;
  display: flex;
  height: 65rpx;
}
.search_arr {
  width: 100%;
  display: flex;
  border: 1px solid #e0e0e0;
  border-radius: 10rpx 0rpx 0rpx 10rpx;
  position: relative;
}

.clear {
  color: #444;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 20rpx;
  height: 100%;
  opacity: .6;
  font-weight: 400;
}

.search_arr input{
  margin-left: 20rpx;
  height: 60rpx;
  border-radius: 10rpx 0rpx 0rpx 10rpx;
}
.bc_text {
  line-height: 68rpx;
  height: 68rpx;
  margin-top: 34rpx;
}
 
.search-btn {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 5% !important;
  font-size: 30rpx;
  line-height: 150%;
  border-top: 1px solid #e0e0e0;
  border-right: 1px solid #e0e0e0;
  border-bottom: 1px solid #e0e0e0;
  border-radius: 0rpx 10rpx 10rpx 0rpx;
}

.searchicon {
  margin: 10rpx 10rpx 10rpx 10rpx;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}

.card-container {
  height: 800rpx;
  margin: 20rpx 0rpx;
}