/* pages/product_index/product_index.wxss */

.main-container {
  display: flex;
  flex-direction: column;
  align-items:center;
  height: 100%;
  position: relative;
  margin-bottom: 80rpx;
}

.flower {
  position: fixed;
  height: 70%;
  z-index: -5;
  left: 0;
  opacity: .3;
}

.search_bar-container {
  margin-top: 40rpx;
  width: 90%;
}

.card-container {
  width: 90%;
  height: 800rpx;
  margin-top: 40rpx;
  display: grid;
  grid-template-columns: auto auto;
  grid-row-gap: 20rpx;
  justify-content: space-between;
}

.banner-box {
  background-color: #fff;
  height: 400rpx;
  overflow: hidden;
}
 
.home-banner {
  width: 100%;
  height: 400rpx;
}
 
.home-banner image {
  width: 100%;
  height: 100%;
}