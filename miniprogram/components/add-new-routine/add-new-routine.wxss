/* components/add-new-routine/add-new-routine.wxss */

.routine {
  width: 100%;
  height: 180rpx;
  display: flex;
  justify-content: center;
  box-shadow: 0px 0px 2px rgba(116, 116, 116, 0.1);
}

.center {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100%;
  width: 85%;
}

.icon-name {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.add-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #444444;
}

.routine-icon {
  margin-right: 40rpx;
  width: 85rpx;
  height: 85rpx;
}

.add-icon {
  width: 40rpx;
  height: 40rpx;
}
