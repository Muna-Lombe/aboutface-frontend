/* components/search_bar/search_bar.wxss */
/* search bar */
.search{
  width: 100%;
  display: flex;
  height: 65rpx;
}
.search_arr {
  width: 100%;
  display: flex;
  border: 1px solid #e0e0e0;
  border-radius: 10rpx 0rpx 0rpx 10rpx;
  position: relative;
}

.clear {
  color: #444;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 20rpx;
  height: 100%;
  opacity: .6;
  font-weight: 400;
}

.search_arr input{
  margin-left: 20rpx;
  height: 60rpx;
  border-radius: 10rpx 0rpx 0rpx 10rpx;
}
.bc_text {
  line-height: 68rpx;
  height: 68rpx;
  margin-top: 34rpx;
}
 
.search-btn {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 5% !important;
  font-size: 30rpx;
  line-height: 150%;
  border-top: 1px solid #e0e0e0;
  border-right: 1px solid #e0e0e0;
  border-bottom: 1px solid #e0e0e0;
  border-radius: 0rpx 10rpx 10rpx 0rpx;
}

.searchicon {
  margin: 10rpx 10rpx 10rpx 10rpx;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}