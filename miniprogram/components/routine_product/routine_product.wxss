/* components/routine_product/routine_product.wxss */

.product-box {
  width: 100%;
  height: 200rpx;
  position: relative;
  color: #444444;
}

.product-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100%;
}

.img-name {
  width: 100%;
  display: flex;
}

.product-box-img {
  width: 160rpx;
  height: 160rpx;
  background-color: #EEB4B8;
  border-radius: 5px;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.img {
  height: 150rpx;
  width: 150rpx;
  filter: drop-shadow(0px 2px 2px rgba(0, 0, 0, 0.5));
}

.delete-box {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  background-color: #EEB4B8;
  display: flex;
  justify-content: center;
  align-items: center;
}

.delete-icon {
  height: 6rpx;
  width: 40rpx;
  background-color: #444444;
}

.name-brand {
  width: 430rpx;
}

.product-name {
  font-weight:bold;
  font-size: 30rpx;
}

.product-brand {
  font-size: 25rpx;
  opacity: .7;
}