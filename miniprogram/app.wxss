/**app.wxss**/
.body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.navbar {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 60rpx;
  height: 130rpx;
  width: 100%;
  font-size: 35rpx;
  background-color: #fbfbfb;
  position:sticky;
  top:0;
  z-index: 9;
}